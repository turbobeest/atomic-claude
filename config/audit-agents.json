{
  "_comment": "Maps audit categories to recommended agents for execution",
  "_version": "1.0.0",

  "audit_agent_mapping": {
    "security": {
      "primary_agents": ["security-auditor", "vulnerability-expert"],
      "fallback_agents": ["deep-code-reviewer-phd", "senior-engineer"],
      "description": "Security vulnerability and threat analysis"
    },
    "architecture": {
      "primary_agents": ["arch-compliance-phd", "system-architect"],
      "fallback_agents": ["design-pattern-expert", "senior-engineer"],
      "description": "Architectural compliance and design review"
    },
    "performance": {
      "primary_agents": ["perf-analyzer-phd", "performance-engineer"],
      "fallback_agents": ["optimization-specialist", "senior-engineer"],
      "description": "Performance analysis and optimization"
    },
    "code_quality": {
      "primary_agents": ["code-quality-expert", "clean-code-expert"],
      "fallback_agents": ["code-reviewer-phd", "refactoring-specialist"],
      "description": "Code quality, standards, and maintainability"
    },
    "testing": {
      "primary_agents": ["integration-test-expert", "test-writer-phd"],
      "fallback_agents": ["unit-test-specialist", "senior-engineer"],
      "description": "Test coverage and test quality"
    },
    "documentation": {
      "primary_agents": ["doc-reviewer-phd", "technical-writer"],
      "fallback_agents": ["api-doc-specialist"],
      "description": "Documentation completeness and quality"
    },
    "requirements": {
      "primary_agents": ["requirements-engineer", "prd-validator"],
      "fallback_agents": ["senior-engineer"],
      "description": "Requirements traceability and completeness"
    },
    "compliance": {
      "primary_agents": ["arch-compliance-phd", "security-auditor"],
      "fallback_agents": ["code-quality-expert"],
      "description": "Regulatory and standards compliance"
    },
    "api": {
      "primary_agents": ["api-doc-specialist", "backend-engineer"],
      "fallback_agents": ["integration-test-expert"],
      "description": "API design and contract validation"
    },
    "accessibility": {
      "primary_agents": ["fullstack-developer", "doc-reviewer-phd"],
      "fallback_agents": ["senior-engineer"],
      "description": "Accessibility compliance"
    }
  },

  "phase_audit_focus": {
    "1-discovery": {
      "primary_audits": ["requirements"],
      "recommended_agents": ["requirements-engineer"]
    },
    "2-prd": {
      "primary_audits": ["requirements", "documentation"],
      "recommended_agents": ["prd-validator", "requirements-engineer"]
    },
    "3-tasking": {
      "primary_audits": ["requirements", "architecture"],
      "recommended_agents": ["task-decomposer", "system-architect"]
    },
    "4-specification": {
      "primary_audits": ["architecture", "requirements"],
      "recommended_agents": ["spec-writer", "design-pattern-expert"]
    },
    "5-implementation": {
      "primary_audits": ["code_quality", "testing", "security"],
      "recommended_agents": ["code-reviewer-phd", "security-scanner", "test-writer-phd"]
    },
    "6-code-review": {
      "primary_audits": ["security", "code_quality", "architecture", "performance"],
      "recommended_agents": ["deep-code-reviewer-phd", "security-auditor", "arch-compliance-phd"]
    },
    "7-integration": {
      "primary_audits": ["testing", "performance", "api"],
      "recommended_agents": ["integration-test-expert", "perf-analyzer-phd"]
    },
    "8-deployment-prep": {
      "primary_audits": ["security", "documentation", "compliance"],
      "recommended_agents": ["security-auditor", "technical-writer"]
    },
    "9-release": {
      "primary_audits": ["documentation", "compliance"],
      "recommended_agents": ["doc-reviewer-phd"]
    }
  },

  "multi_agent_audit": {
    "_comment": "For critical audits, use multiple agents with deliberation",
    "security_deep": {
      "agents": ["security-auditor", "vulnerability-expert", "deep-code-reviewer-phd"],
      "deliberation_model": "opus",
      "quorum_required": 2
    },
    "architecture_review": {
      "agents": ["arch-compliance-phd", "system-architect", "design-pattern-expert"],
      "deliberation_model": "opus",
      "quorum_required": 2
    },
    "pre_release": {
      "agents": ["security-auditor", "perf-analyzer-phd", "doc-reviewer-phd"],
      "deliberation_model": "sonnet",
      "quorum_required": 3
    }
  }
}
